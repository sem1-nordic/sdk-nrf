menuconfig BT_RAS
	bool "Enable GATT ranging service"
	select EXPERIMENTAL
	select BT_NRF_SERVICES

if BT_RAS

config BT_RAS_AUTO_ALLOC_RRSP_INSTANCE
	bool "Automatically allocate RRSP instances to new connections"
	default y

config BT_RAS_MAX_ACTIVE_RRSP
	int "Number of simultaneously supported RRSP instances"
	default BT_MAX_CONN
	range 1 BT_MAX_CONN
	help
	  The number of simultaneous connections with an instance of RAS RRSP

config BT_RAS_RRSP_TIMEOUT_SECONDS
	int "RRSP RAS-CP procedure timeout"
	default 10
	range 1 10
	help
	  Maximum time allowed between the RRSP indicating a Complete Ranging Data
	  indication and the RREQ responding with an ACK_Ranging_Data command 
	  or a Retrieve_Lost_Ranging_Data command.

config BT_RAS_RD_BUFFERS_PER_CONN
	int "Number of ranging data buffers per connection"
	default 3
	range 1 10
	help
	  The number of ranging procedures that can be stored inside RRSP
	  
config BT_RAS_MAX_ACTIVE_RREQ
	int "Number of simultaneously supported RREQ instances"
	default BT_MAX_CONN
	range 1 BT_MAX_CONN
	help
	  The number of simultaneous connections with an instance of RAS RREQ

module = BT_RAS
module-str = RAS
source "${ZEPHYR_BASE}/subsys/logging/Kconfig.template.log_config"

endif # BT_RAS
